@inject IStringLocalizer<MainLayout> L

<MudAppBar Elevation="0">
	<MudSpacer />
    <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
		<ThemeToggle />
        <LanguageSelector />
		<MudTooltip Text="@L["mainlayout.icon.github.tooltip"]">
            <MudIconButton Icon="@Icons.Custom.Brands.GitHub"
							Color="Color.Inherit"
							Link="https://github.com/drehtisch/ReflectInput"
							Target="_blank" />
        </MudTooltip>
    </MudHidden>
</MudAppBar>

<MudMainContent>
    <MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
        @ChildContent
        <MudScrollToTop TopOffset="400" Style="z-index:2000;">
            <MudFab Icon="@Icons.Material.Filled.KeyboardArrowUp" Color="Color.Primary" />
        </MudScrollToTop>
    </MudContainer>
</MudMainContent>