@page "/home"
@page "/"

@inject IStringLocalizer<Index> L

<MudContainer>
    <MudGrid>
@*        <MudItem xs="12" sm="12" md="12">
            <div class="d-flex justify-center mt-4">
                 <img src="full-stack-hero-logo.png" Style="height:250px" />
            </div>
        </MudItem>*@
        <MudItem xs="12" sm="12" md="12">
			<MudText Align="Align.Center" Typo="Typo.h3" Class="mb-4">
				@L["index.title"]
			</MudText>
            <MudText Align="Align.Center" Typo="Typo.h6" Class="smaller">
				@L["index.description"]
			</MudText>
        </MudItem>

		<MudItem xs="12" sm="12" md="12" class="mt-4">
			<MudGrid>
				<MudItem xs="12" md="6">
					<MudTextField
						@bind-Value="_identifier"
						Variant="Variant.Outlined"
						Label="@L["index.textfield.identifier.label"]"
						Placeholder="@L["index.textfield.identifier.label"]"
						class="mb-4"
					></MudTextField>

					<MudTextField
						@bind-Value="_text"
						Variant="Variant.Outlined"
						Label="@L["index.textfield.text.label"]"
						Placeholder="@L["index.textfield.text.label"]"
						Lines="10"
						class="mb-3"
					></MudTextField>

					<div class="d-flex justify-space-between">
						<MudButton Variant="Variant.Filled" Color="Color.Primary">
							@L["index.button.submit.text"]
						</MudButton>
						<MudButton Variant="Variant.Text" Color="Color.Error">
							@L["index.button.submit.next"]
						</MudButton>
					</div>
				</MudItem>
				<MudItem md="6">
				</MudItem>
			</MudGrid>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
	private string _identifier { get; set; }
	private string _text { get; set; }
}